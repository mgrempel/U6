<div class="card">
  <div class="card-header">
    <div class="card-header-title">
      <p><%=customer.full_name%></p>
    </div>
  </div>
  <% if customer.image.present? %>
    <div class="card-image">
      <figure class="image is-4by3">
        <%= image_tag customer.image, alt: "profile picture" %>
      </figure>
    </div>
    <div class="card-content">
      <div class="content">
        <p><b>Phone Number:</b> <%=customer.phone_number%></p>
        <% if customer.email_address.present? %>
          <p><b>Email:</b> <%=customer.email_address%></p>
        <% end %>
        <p><b>Notes:</b> <%=customer.notes%></p>
      </div>
    </div>
  <% end %>
</div>